# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 120
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{md,md.in}]
end_of_line = crlf
max_line_length = 0
trim_trailing_whitespace = false

[*.{bat,bat.in,ps1,ps1.in}]
end_of_line = crlf

[COMMIT_EDITMSG]
max_line_length = 0
